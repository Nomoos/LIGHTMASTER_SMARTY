{message msg=$msg type="info"}{message msg=$err type="error"}<form class="form-horizontal" id="form-1" role="form" method="post">    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-1">{t}CONTROLNAME{/t}</label>        <div class="col-sm-8">            <input type="text" id="form-field-1" placeholder="{t}CONTROLNAME{/t}" name="controlname" value="{$smarty.post.controlname}" />        </div>    </div>    <div class="space-4"></div>    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-2">{t}CONTROLIP{/t}</label>        <div class="col-sm-8">            <input type="text" id="form-field-2" placeholder="{t}CONTROLIP{/t}" name="controlip" value="{$smarty.post.controlip}" />        </div>    </div>    <div class="space-4"></div>    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-3"> {t}AREA{/t} </label>        <div class="col-sm-8">            <select class="chosen-select form-control" id="form-field-select-3" data-placeholder="Choose a area..." style="display: none;" name="area">                <option value="">  </option>                {if isset($smarty.session.filter.company)}                    {foreach $areasList AS $it}                        <option value="{$it.ID_area}"  {if isset($area)}{if $area == $it.ID_area}selected{/if}{/if}>{$it.area_name}</option>                    {/foreach}                {/if}            </select>        </div>    </div>    <div class="space-4"></div>    <div class="clearfix form-actions col-sm-12">        <div class="col-sm-offset-3 col-sm-9">            <button class="btn btn-info" data-submitform="1" data-submitvalue="new" type="button">                <i class="icon-ok bigger-110"></i>                {t}SAVE{/t}            </button>            &nbsp; &nbsp; &nbsp;            <button class="btn" type="reset">                <i class="icon-undo bigger-110"></i>                {t}CANCEL{/t}            </button>        </div>    </div>    <input id="submitValue1" type="hidden" name="submitValue" value="" /></form><script>    jQuery(".chosen-select").chosen({ldelim}allow_single_deselect:true,width: "100%"{rdelim});</script>