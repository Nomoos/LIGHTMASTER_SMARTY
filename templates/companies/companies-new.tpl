{message msg=$msg type="info"}{message msg=$err type="error"}<div class="row">    <div class="col-sm-6">        <div class="widget-box">            <div class="widget-header">                <h4>Základní informace</h4>            </div>            <div class="widget-body">                <div class="widget-main no-padding">                    <form action="" method="post" class="form-horizontal">                        <fieldset>                            {message msg=$err type="error"}                            <div class="form-group">                                <label class="col-sm-4 control-label no-padding-right" for="form-field-1">{t}COPANYNAME{/t}</label>                                <div class="col-sm-8">                                    <input id="form-field-1" type="text" name="company_name" value="{$smarty.post.company_name}" />                                </div>                            </div>                        </fieldset>                        <div class="form-actions center">                            <button type="submit" class="btn btn-success" name="new" value="{t}SAVE{/t}">                                <i class="icon-ok bigger-110"></i>                                {t}SAVE{/t}                            </button>                            &nbsp; &nbsp; &nbsp;                            <button class="btn" type="reset" onclick="window.location='{$setup.adm.www}companies/list.html'">                                <i class="icon-undo bigger-110"></i>                                {t}CANCEL{/t}                            </button>                        </div>                        <input id="submitValue1" type="hidden" name="submitValue" value="" />                    </form>                </div>            </div>        </div>    </div></div>