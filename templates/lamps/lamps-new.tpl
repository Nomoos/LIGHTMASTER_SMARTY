{message msg=$msg type="info"}{message msg=$err type="error"}<form class="form-horizontal" id="form-1" role="form" method="post">    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-1">{t}LAMPIP{/t}</label>        <div class="col-sm-8">            <input type="text" id="form-field-1" placeholder="{t}LAMPIP{/t}" name="lampip" value="{$smarty.post.lampip}" />        </div>    </div>    <div class="space-4"></div>    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-2"> {t}AREA{/t} </label>        <div class="col-sm-8">            {$areaname}            <input type="hidden" id="form-field-5" name="area" value="{$area}" />        </div>    </div>    <div class="space-4"></div>    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-3"> {t}CONTROL{/t} </label>        <div class="col-sm-8">            <select class="chosen-select form-control" id="form-field-select-3" data-placeholder="Choose a control..." style="display: none;" name="control">                <option value="">  </option>                    {foreach $controlsList AS $it}                        <option value="{$it.ID_control}"  {if isset($control)}{if $control == $it.ID_control}selected{/if}{/if}>{$it.control_name}</option>                    {/foreach}            </select>        </div>    </div>    <div class="space-4"></div>    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-4"> {t}LAT{/t} </label>        <div class="col-sm-8">            {$smarty.post.lat}            <input type="hidden" id="form-field-4" name="lat" value="{$smarty.post.lat}" />        </div>    </div>    <div class="space-4"></div>    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-5"> {t}LNG{/t} </label>        <div class="col-sm-8">            {$smarty.post.lng}            <input type="hidden" id="form-field-5" name="lng" value="{$smarty.post.lng}" />        </div>    </div>    <div class="space-4"></div>    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-6"> {t}DEFAULTWORKLOADPLAN{/t} </label>        <div class="col-sm-8">            <select class="chosen-select form-control" id="form-field-select-6" data-placeholder="Choose a plan..." style="display: none;" name="defaultPlan" onchange="this.form.submit()">                <option value="NULL">  </option>                {foreach $defaultPlansList AS $it}                    <option value="{$it.ID_plan}"  {if isset($defaultPlan)}{if $defaultPlan == $it.ID_plan}selected{/if}{/if}>{$it.plan_name}</option>                {/foreach}            </select>        </div>    </div>    {if $defaultPlan==2}    <div class="space-4"></div>    <div class="form-group col-sm-12">        <label class="col-sm-4 control-label no-padding-right" for="form-field-7"> {t}COMPANYWORKLOADPLAN{/t} </label>        <div class="col-sm-8">            <select class="chosen-select form-control" id="form-field-select-7" data-placeholder="Choose an other plan..." style="display: none;" name="plan">                <option value="NULL">  </option>                {foreach $plansList AS $it}                    <option value="{$it.ID_plan}"  {if isset($plan)}{if $plan == $it.ID_plan}selected{/if}{/if}>{$it.plan_name}</option>                {/foreach}            </select>        </div>    </div>    {/if}    {if $defaultPlan==3}        <div class="space-4"></div>        <div class="form-group col-sm-12">            <label class="col-sm-4 control-label no-padding-right" for="form-field-8"> {t}ISENABLED{/t} </label>            <div class="col-sm-8">                <input type="checkbox" id="form-field-8" name="is_enabled" value="1" onchange="this.form.submit()" {if $is_enabled==1}checked{/if} />            </div>        </div>        {if $is_enabled==1}            <div class="space-4"></div>            <div class="form-group col-sm-12">                <label class="col-sm-4 control-label no-padding-right" for="form-field-8"> {t}SETWORKLOAD{/t} </label>                <div class="col-sm-8">                    <input type="number" min="0" max="100" id="form-field-8" name="set_workload" value="{$set_workload}" />                </div>            </div>        {/if}    {/if}    <div class="space-4"></div>    <div class="clearfix form-actions col-sm-12">        <div class="col-sm-offset-3 col-sm-9">            <button class="btn btn-info" data-submitform="1" data-submitvalue="new" type="button">                <i class="icon-ok bigger-110"></i>                {t}SAVE{/t}            </button>            &nbsp; &nbsp; &nbsp;            <button class="btn" type="reset">                <i class="icon-undo bigger-110"></i>                {t}CANCEL{/t}            </button>        </div>    </div>    <input id="submitValue1" type="hidden" name="submitValue" value="" /></form><script>    jQuery(".chosen-select").chosen({ldelim}allow_single_deselect:true,width: "100%"{rdelim});</script>